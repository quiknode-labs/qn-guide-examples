# Quicknode API Key (required)
# Get your API key from: https://dashboard.quicknode.com/api-keys
# Required permission: CONSOLE_REST
QUICKNODE_API_KEY=your_api_key_here

# Alert Thresholds (percentage of limit)
# Alerts trigger when usage >= threshold
ALERT_THRESHOLD_WARNING=80
ALERT_THRESHOLD_CRITICAL=95

# Alerting Channels (enable the ones you want to use)

# Slack Webhook
# Create at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# PagerDuty Events API v2
# Get routing key from: https://support.pagerduty.com/docs/services-and-integrations
PAGERDUTY_ROUTING_KEY=

# Discord Webhook
# Create in: Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=

# Opsgenie API
# Get API key from: https://docs.opsgenie.com/docs/api-key-management
OPSGENIE_API_KEY=

# Email via SendGrid
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=
ALERT_EMAIL_RECIPIENTS=email1@example.com,email2@example.com

# Generic Webhook (for custom integrations)
GENERIC_WEBHOOK_URL=

# Prometheus Exporter Settings (optional)
# Port for the Prometheus metrics endpoint
EXPORTER_PORT=9091
